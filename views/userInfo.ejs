    <main class="main">
  
      <section id="login" class="login section light-background">
        <div class="container">
          <div class="row gy-4 justify-content-center">
            <div class="col-lg-6 d-flex flex-column justify-content-center">
              <h2>User Information</h2>
              
              <div class="mb-3 row">
                <label class="col-sm-4 col-form-label"><strong>Full Name:</strong></label>
                <div class="col-sm-6">
                  <span id="fullname-display"><%= user.fullname %></span>
                  <input type="text" id="fullname-input" class="form-control" name="fullname" value="<%= user.fullname %>" style="display: none;">
                </div>
                <div class="col-sm-2">
                  <button class="btn btn-link" onclick="toggleEdit('fullname')">Edit</button>
                </div>
              </div>

              <div class="mb-3 row">
                <label class="col-sm-4 col-form-label"><strong>Email:</strong></label>
                <div class="col-sm-6">
                  <span id="email-display"><%= user.email %></span>
                  <input type="email" id="email-input" class="form-control" name="email" value="<%= user.email %>" style="display: none;">
                </div>
                <div class="col-sm-2">
                  <button class="btn btn-link" onclick="toggleEdit('email')">Edit</button>
                </div>
              </div>

              <% if (user.avatar) { %>
                <div class="mb-3 row">
                  <label class="col-sm-4 col-form-label"><strong>Avatar:</strong></label>
                  <div class="col-sm-6">
                    <img id="avatar-display" src="<%= user.avatar %>" alt="User Avatar" class="img-fluid">
                    <input type="file" id="avatar-input" class="form-control" name="avatar" style="display: none;" onchange="previewAvatar(event)">
                  </div>
                  <div class="col-sm-2">
                    <button class="btn btn-link" onclick="toggleEdit('avatar')">Change</button>
                  </div>
                </div>
              <% } %>

              <div class="mb-3 row">
                <label class="col-sm-4 col-form-label"><strong>Password:</strong></label>
                <div class="col-sm-6">
                  <span id="password-display">********</span>
                  <input type="password" id="password-input" class="form-control" name="password" style="display: none;">
                </div>
                <div class="col-sm-2">
                  <button class="btn btn-link" onclick="toggleEdit('password')">Change</button>
                </div>
              </div>

              <button class="btn btn-primary" onclick="submitChanges()">Save Changes</button>
            </div>
          </div>
        </div>
      </section>
  
